<%- include('../partials/header')  %>
    <div class="container-fluid">
        <section class="row justify-content-center">
            <div class="col-sm-8">
                <form action="/cohorts" class="d-flex flex-column" method="POST">
                    <div class="form-group">
                        <label for="logoUrl">Logo Url</label>
                        <input 
                            class="form-control"
                            id="logoUrl"
                            name="logoUrl"
                            type="text"
                            placeholder="e.g. https://www.example.com/some.png"
                        />
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input 
                            class="form-control"
                            id="name"
                            name="name"
                            type="text"
                            placeholder="Flying Funks"
                        />
                    </div>
                    <div class="form-group">
                        <label for="members">Members</label>
                        <textarea 
                            class="form-control"
                            id="members"
                            name="members"
                            placeholder="Jon Snow, Daenerys, Melisandre, Arya Stark"
                            rows="3"
                        >
                        </textarea>
                    </div>
                    <input 
                        type="submit"
                        class="btn btn-outline-primary align-self-end"
                        value="Submit"
                    />
                </form>
            </div>
        </section>
    </div>
<%- include ('../partials/footer') %> 